<%- include('partials/header', {pageTitle: 'Virtual Library' }) %>

    <link rel="stylesheet" href="../css/addBook.css">

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form id="add-book-form">
                    <label for="name">Título<small>*</small>:</label><br>
                    <input type="text" id="name" name="name" required><br>

                    <label for="description">Descrição:</label><br>
                    <input type="text" id="description" name="description"><br>

                    <label for="author">Autor<small>*</small>:</label><br>
                    <input type="text" id="author" name="author" required><br>

                    <label for="year">Ano:</label><br>
                    <input type="text" id="year" name="year"><br>

                    <label for="publisher">Editora<small>*</small>:</label><br>
                    <input type="text" id="publisher" name="publisher" required><br>

                    <label for="genre">Genero:</label><br>
                    <input type="text" id="genre" name="genre"><br>

                    <label for="pagecount">Quantidade de páginas:</label><br>
                    <input type="text" id="pagecount" name="pagecount"><br>

                    <label for="lang">Idioma:</label><br>
                    <select id="lang" name="lang">
                        <option value="">Selecione um idioma...</option>
                        <option value="PT-BR">Português</option>
                        <option value="EN-US">Inglês</option>
                        <option value="ES-ES">Espanhol</option>
                        <option value="FR-FR">Francês</option>
                        <option value="DE-DE">Alemão</option>
                        <option value="IT-IT">Italiano</option>
                        <option value="JA-JP">Japonês</option>
                        <option value="KO-KR">Coreano</option>
                        <option value="ZH-CN">Chinês</option>
                    </select><br>

                    <label>Faz parte de uma coleção?</label><br>
                    <div class="radio-group">
                        <input type="radio" id="yes" name="is_collection" value="yes"
                            onclick="showCollectionNameField()">
                        <label for="yes">Sim</label>&emsp;
                        <input type="radio" id="no" name="is_collection" value="no" onclick="hideCollectionNameField()"
                            checked>
                        <label for="no">Não</label>
                    </div>

                    <div id="collection_name_field" style="display: none;">
                        <label for="collection_name">Nome da coleção:</label><br>
                        <input type="text" id="collection_name" name="collection_name"><br>
                    </div>



                    <label for="image"><i class="fa fa-upload"></i><small>*</small></label><br>
                    <input type="file" id="image" name="image">
                    <span id="file-name"></span><br>

                    <input id="submit-button" type="submit" value="Enviar">
                </form>
            </div>
        </div>
    </div>

    <script src="../js/addBook.js"></script>