<%- include('partials/header', {pageTitle: 'Virtual Library' }) %>

    <link rel="stylesheet" href="../css/addBook.css">

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form id="add-book-form">
                    <label for="name">Name<small>*</small>:</label><br>
                    <input type="text" id="name" name="name" required><br>

                    <label for="description">Description:</label><br>
                    <input type="text" id="description" name="description"><br>

                    <label for="author">Author<small>*</small>:</label><br>
                    <input type="text" id="author" name="author" required><br>

                    <label for="year">Year:</label><br>
                    <input type="text" id="year" name="year"><br>

                    <label for="publisher">Publisher<small>*</small>:</label><br>
                    <input type="text" id="publisher" name="publisher" required><br>

                    <label for="genre">Genre:</label><br>
                    <input type="text" id="genre" name="genre" required><br>

                    <label for="pagecount">Page Count:</label><br>
                    <input type="text" id="pagecount" name="pagecount" required><br>

                    <label for="lang">Language:</label><br>
                    <select id="lang" name="lang" required>
                        <option value="">Selecione um idioma...</option>
                        <option value="PT-BR">Português</option>
                        <option value="EN-US">Inglês</option>
                        <option value="ES-ES">Espanhol</option>
                        <option value="FR-FR">Francês</option>
                        <option value="DE-DE">Alemão</option>
                        <option value="IT-IT">Italiano</option>
                        <option value="JA-JP">Japonês</option>
                        <option value="KO-KR">Coreano</option>
                        <option value="ZH-CN">Chinês</option>
                    </select><br>

                    <label for="collection_name">Nome da coleção (Caso tenha):</label><br>
                    <input type="text" id="collection_name" name="collection_name" required><br>


                    <label for="image"><i class="fa fa-upload"></i></label><br>
                    <input type="file" id="image" name="image">
                    <span id="file-name"></span><br>

                    <input id="submit-button" type="submit" value="Submit">
                </form>
            </div>
        </div>
    </div>

    <script src="../js/addBook.js"></script>